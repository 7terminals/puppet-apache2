<VirtualHost *:80>

ServerAdmin serveradmin@7terminals.com
ServerName <%= servername %>
ServerAlias <%= serveraliase %>


DocumentRoot /home/<%= servername %>/www/<%= servername %>

<Directory /home/<%= servername %>/www/<%= servername %>>

Order Deny,Allow
Allow from all

php_admin_value session.save_path "/home/<%= servername %>/www/tmp"
php_admin_value open_base_dir "/home/<%= servername %>/www"

AllowOverride ALL

</Directory>

ErrorLog /home/<%= servername %>/logs/<%= servername %>/error.log
CustomLog /home/<%= servername %>/logs/<%= servername %>/access.log combined

</VirtualHost>
